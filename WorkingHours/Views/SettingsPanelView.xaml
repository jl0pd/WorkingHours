<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="250"
        x:Class="WorkingHours.Views.SettingsPanelView">
  <DockPanel>
    <Button Content="Back" FontSize="14" Command="{Binding Back}" DockPanel.Dock="Bottom"/>
    <ListBox DockPanel.Dock="Top" BorderThickness="0">
       <Button Content="About" Command="{Binding ShowAbout}"/>
      <ListBox.Styles>
        <Style Selector="Button">
          <Setter Property="Margin" Value="3" />
        </Style>
      </ListBox.Styles>
    </ListBox>
  </DockPanel>
</UserControl>
