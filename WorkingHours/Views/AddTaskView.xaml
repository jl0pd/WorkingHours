<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="250"
             x:Class="WorkingHours.Views.AddTaskView">
    <DockPanel>
        <UniformGrid Columns="2" DockPanel.Dock="Bottom">
            <Button Content="Cancel" Command="{Binding Cancel}" FontSize="14" Background="DarkRed"/>
            <Button Content="Add" Command="{Binding Add}" FontSize="14" Background="SeaGreen" />
        </UniformGrid>
        <TextBox Text="{Binding TaskName}" AcceptsReturn="True">
            <TextBlock.FontStyle>
            </TextBlock.FontStyle>
        </TextBox>
    </DockPanel>
</UserControl>
