<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:WorkingHours.Models;assembly=WorkingHours"
             xmlns:views="clr-namespace:WorkingHours.Views;assembly=WorkingHours"
             xmlns:vms="clr-namespace:WorkingHours.ViewModels;assembly=WorkingHours"
             
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="250"
             x:Class="WorkingHours.Views.WorkingTasksView">
  <DockPanel>
    <UniformGrid DockPanel.Dock="Bottom" Rows="1">
      <Button Content="Pin" Command="{Binding $parent[Window].DataContext.Pin}" FontSize="14" />
      <Button  Content="Add" Command="{Binding $parent[Window].DataContext.AddItem}" FontSize="14" />
    </UniformGrid>
    <ListBox x:Name="MainListBox" Items="{Binding Items}"
        SelectionMode="Multiple"
        ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
      <ListBox.ItemTemplate>
        <DataTemplate DataType="models:WorkingTask">
          <views:WorkingTaskItemView DataContext="{Binding}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
      <ListBox.ContextMenu>
        <ContextMenu>
          <Button Content="Delete selected" Width="100" ClickMode="Release" Command="{Binding DeleteSelected}" />
        </ContextMenu>
      </ListBox.ContextMenu>
    </ListBox>
  </DockPanel>
</UserControl>
